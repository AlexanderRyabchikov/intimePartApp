<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <EditText
        android:id="@+id/input_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:paddingVertical="8dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:background="@null"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dropdown_menu"
        tools:hint="Medical data" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dropdown_menu"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:boxBackgroundColor="@color/transparent"
        app:layout_constraintBottom_toBottomOf="@id/input_field"
        app:endIconMode="none"
        app:boxStrokeColor="@null"
        app:layout_constraintEnd_toStartOf="@id/arrow_drop_down"
        app:layout_constraintTop_toTopOf="@id/input_field">

        <AutoCompleteTextView
            android:background="@null"
            android:focusable="false"
            android:maxLength="3"
            android:paddingVertical="10dp"
            android:paddingHorizontal="0dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:id="@+id/item_menu"
            tools:text="cm" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/arrow_drop_down"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_drop_down_arrow"
        app:layout_constraintBottom_toBottomOf="@id/input_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/input_field" />

    <View
        android:id="@+id/underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/underline_state"
        app:layout_constraintBottom_toBottomOf="@id/input_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</merge>